{
    "compilerOptions": {
        "allowJs": false,
        "declaration": true,
        "esModuleInterop": true,
        "removeComments": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "dist",
        "sourceMap": true,
        "target": "es2017"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
      "node_modules/*",
      "src/utils/locales/**/*"
    ],
    "types": [
        "node",
        "mocha"
    ]
}
