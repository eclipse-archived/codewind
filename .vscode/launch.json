    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/test/node_modules/mocha/bin/_mocha",
            "args": [
                "--timeout",
                "999999", // timeout length. Required since while debugging we may pause for longer than Mocha's test timeout
                "--colors",
                "${workspaceFolder}/test/src/",
                "--recursive",
                "--exit",
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "cwd": "${workspaceFolder}/test"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Current File",
            "program": "${workspaceFolder}/test/node_modules/mocha/bin/_mocha",
            "args": [
                "--colors",
                "--timeout",
                "999999",
                "${file}",
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Codewind",
            "address": "127.0.0.1",
            "port": 34000,
            "localRoot": "${workspaceFolder}/src/pfe/portal",
            "remoteRoot": "/portal",
            "restart": true
        },
    ]
}
